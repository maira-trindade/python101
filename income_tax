salario = float(input())

imposto = 0

if salario <= 2000:
  print('Isento')
elif salario < 3000:
  imposto = (salario - 2000) * .08
  print(f'R$ {imposto:.2f}')
elif salario <= 4500:
  imposto = (salario - 3000) * .18 + 1000 * .08
  print(f'R$ {imposto:.2f}')
else:
  imposto = (salario - 4500) * .28 + 1500 * .18 + 1000 * .08
  print(f'R$ {imposto:.2f}')